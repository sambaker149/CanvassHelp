@page
@model CanvassHelp.Pages.Groupings.IndexModel

@{
    ViewData["Title"] = "Address Groups";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Address Groups</h2>
</div>

<p>
    <a class="btn btn-primary shadow" asp-page="Create"
       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Add New Address Group</a>
</p>
<div class="btn-group">
    <a class="btn btn-primary shadow" asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;">Order By Group Name</a>
    <a class="btn btn-primary shadow" asp-page="./Index" asp-route-sortOrder="@Model.IDSort"
       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;">Order By ID</a>
</div>
<br />
<br />
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search By Group Name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary shadow"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;" />
            <a class="btn btn-primary shadow" asp-page="./ResidentInput"
               style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;">Back to Full List</a>
        </p>
    </div>
</form>

<div class="album py-5 bg-light">
    <div class="container text-center">
        <div class="row justify-content-center">
            @foreach (var group in Model.Grouping)
            {
                <div class="col-md-6">
                    <div class="card mb-6 box-shadow">
                        <div class="card-body">
                            <h4 class="card-text">@group.GroupingName</h4>
                            <h6 class="card-text"><b>Address Group ID: </b>@group.GroupingId</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-primary shadow" asp-page="./Details" asp-route-id="@group.GroupingId"
                                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Details</a>
                                    <br />
                                    <a class="btn btn-primary shadow" asp-page="./Edit" asp-route-id="@group.GroupingId"
                                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Edit</a>
                                    <br />
                                    <a class="btn btn-primary shadow" asp-page="./Delete" asp-route-id="@group.GroupingId"
                                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>