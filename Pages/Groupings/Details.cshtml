@page
@model CanvassHelp.Pages.Groupings.DetailsModel

@{
    ViewData["Title"] = "Address Group Details";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Address Groups</h2>
</div>

<div>
    <h4>Address Group Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Address Group Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grouping.GroupingName)
        </dd>
        <dt class="col-sm-2">
            Address Group ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grouping.GroupingId)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Grouping.GroupingId">Edit</a> |
    <a class="btn btn-secondary" asp-page="./Index">Back to Address Groups List</a>
</div>
