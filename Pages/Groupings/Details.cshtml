@page
@model CanvassHelp.Pages.Groupings.DetailsModel

@{
    ViewData["Title"] = "Address Group Details";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Address Groups</h2>
</div>

<div class="album py-5 bg-light">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4>Address Group Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        <h6><b>Address Group Name: </b></h6>
                    </dt>
                    <dd class="col-sm-8">
                        <h6>@Html.DisplayFor(model => model.Grouping.GroupingName)</h6>
                    </dd>
                    <dt class="col-sm-4">
                        <h6><b>Address Group Name: </b></h6>
                    </dt>
                    <dd class="col-sm-8">
                        <h6>@Html.DisplayFor(model => model.Grouping.GroupingId)</h6>
                    </dd>
                </dl>
            </div>
            <div class="btn-group">
                <a class="btn btn-primary shadow" asp-page="./Edit" asp-route-id="@Model.Grouping.GroupingId"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Edit</a>
                <br />
                <a class="btn btn-primary shadow" asp-page="./Index"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Return to List</a>
                <br />
                <a class="btn btn-primary shadow" role="button" href="/Admin"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Admin Portal</a>
            </div>
        </div>
    </div>
</div>