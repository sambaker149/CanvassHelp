@page
@using CanvassHelp.Models
@model CanvassHelp.Pages.RequestModel

@{
    ViewData["Title"] = "Request New Resident Addition";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Resident Additions</h2>
</div>

<div class="album py-5 bg-light">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4>Request Resident Addition</h4>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NewResidentRequest.AddressId" class="control-label"></label>
                        <select asp-for="NewResidentRequest.AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewResidentRequest.FirstNames" class="control-label"></label>
                        <input asp-for="NewResidentRequest.FirstNames" class="form-control" />
                        <span asp-validation-for="NewResidentRequest.FirstNames" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewResidentRequest.MiddleNames" class="control-label"></label>
                        <input asp-for="NewResidentRequest.MiddleNames" class="form-control" />
                        <span asp-validation-for="NewResidentRequest.MiddleNames" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewResidentRequest.LastNames" class="control-label"></label>
                        <input asp-for="NewResidentRequest.LastNames" class="form-control" />
                        <span asp-validation-for="NewResidentRequest.LastNames" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Voting Intention</label>
                        <select asp-for="NewResidentRequest.NewVoteIntention" class="form-control"
                                asp-items="@Html.GetEnumSelectList<NewVoteIntention>()"></select>
                        <span asp-validation-for="NewResidentRequest.NewVoteIntention" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Likelihood</label>
                        <select asp-for="NewResidentRequest.NewLikelihood" class="form-control"
                                asp-items="@Html.GetEnumSelectList<NewLikelihood>()"></select>
                        <span asp-validation-for="NewResidentRequest.NewLikelihood" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Additional Information</label>
                        <select asp-for="NewResidentRequest.NewInformation" class="form-control"
                                asp-items="@Html.GetEnumSelectList<NewInformation>()"></select>
                        <span asp-validation-for="NewResidentRequest.NewInformation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Contact Preference</label>
                        <select asp-for="NewResidentRequest.NewContactPreference" class="form-control"
                                asp-items="@Html.GetEnumSelectList<NewContactPreference>()"></select>
                        <span asp-validation-for="NewResidentRequest.NewContactPreference" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewResidentRequest.LastContacted" class="control-label"></label>
                        <input asp-for="NewResidentRequest.LastContacted" class="form-control" />
                        <span asp-validation-for="NewResidentRequest.LastContacted" class="text-danger"></span>
                    </div><br />
                    <div class="btn-group">
                        <input type="submit" value="Add" class="btn btn-primary shadow"
                               style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px" />
                        <br />
                        <a class="btn btn-primary shadow" asp-page="./ResidentInput"
                           style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Return to List</a>
                        <br />
                        <a class="btn btn-primary shadow" role="button" href="/Admin"
                           style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Admin Portal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}