@page
@model CanvassHelp.Pages.Addresses.CreateModel

@{
    ViewData["Title"] = "Add Address";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Addresses</h2>
</div>

<div class="album py-5 bg-light">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4>Add New Address</h4>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>Address Group</label>
                        <select asp-for="Address.GroupingId" class="form-control" asp-items="ViewBag.GroupingId"></select>
                    </div>
                    <div class="form-group">
                        <label>House Name</label>
                        <input asp-for="Address.HouseName" class="form-control" />
                        <span asp-validation-for="Address.HouseName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>House Number</label>
                        <input asp-for="Address.HouseNumber" class="form-control" />
                        <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Street Name</label>
                        <input asp-for="Address.StreetName" class="form-control" />
                        <span asp-validation-for="Address.StreetName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Post Town</label>
                        <input asp-for="Address.PostTown" class="form-control" />
                        <span asp-validation-for="Address.PostTown" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Postcode</label>
                        <input asp-for="Address.Postcode" class="form-control" />
                        <span asp-validation-for="Address.Postcode" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="btn-group">
                        <input type="submit" value="Add" class="btn btn-primary shadow"
                               style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px" />
                        <br />
                        <a class="btn btn-primary shadow" asp-page="./Index"
                           style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Return to List</a>
                        <br />
                        <a class="btn btn-primary shadow" role="button" href="/Admin"
                           style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Admin Portal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}