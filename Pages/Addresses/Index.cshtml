@page
@model CanvassHelp.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Addresses";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Addresses</h2>
</div>

<p>
    <a class="btn btn-primary shadow" asp-page="Create"
       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Add New Address</a>
</p>
<div class="btn-group">
    <a class="btn btn-primary shadow" asp-page="./Index" asp-route-sortOrder="@Model.StreetSort"
       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;">Order By Street</a>
    <a class="btn btn-primary shadow" asp-page="./Index" asp-route-sortOrder="@Model.IDSort"
       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;">Order By ID</a>
</div>
<br />
<br />
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search By Street or Postcode:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary shadow"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;" />
            <a class="btn btn-primary shadow" asp-page="./ResidentInput"
               style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin:5px;">Back to Full List</a>
        </p>
    </div>
</form>

<div class="album py-5 bg-light">
    <div class="container text-center">
        <div class="row justify-content-center">
            @foreach (var address in Model.Address)
            {
                <div class="col-md-6">
                    <div class="card mb-6 box-shadow">
                        <div class="card-body">
                            <h4 class="card-text">@address.HouseName @address.HouseNumber @address.StreetName</h4>
                            <h6 class="card-text"><b>Post Town: </b>@address.PostTown</h6>
                            <h6 class="card-text"><b>Postcode: </b>@address.Postcode</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-primary shadow" asp-page="./Details" asp-route-id="@address.AddressId"
                                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Details</a>
                                    <br />
                                    <a class="btn btn-primary shadow" asp-page="./Edit" asp-route-id="@address.AddressId"
                                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Edit</a>
                                    <br />
                                    <a class="btn btn-primary shadow" asp-page="./Delete" asp-route-id="@address.AddressId"
                                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);margin: 5px">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>