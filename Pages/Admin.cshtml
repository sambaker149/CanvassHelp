@page
@model AdminModel
@{
    ViewData["Title"] = "Admin Portal";
}

<div class="text-center">
    <h1 class="display-4">CanvassHelp Web Application</h1>
    <h2>Admin Portal</h2>
</div>

<div class="row">
    <div class="col-sm-4">
        <section class="text-center">
        <h4>Address Groups</h4>
        <ol class="list-group text-center">
            <li class="list-group-item">
                <a class="btn btn-primary shadow" role="button" href="/Groupings/Index"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Address Groups List</a><br />
                View All Address Groups
            </li>
            <li class="list-group-item">
                <a class="btn btn-primary shadow" role="button" href="/Groupings/Create"
                   style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Add Address Group</a><br />
                Add New Address Group
            </li>
        </ol>
        </section>
    </div>
    <div class="col-sm-4">
        <section class="text-center">
            <h4>Addresses</h4>
            <ol class="list-group text-center">
                <li class="list-group-item">
                    <a class="btn btn-primary shadow" role="button" href="/Addresses/Index"
                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Addresses List</a><br />
                    View All Addresses
                </li>
                <li class="list-group-item">
                    <a class="btn btn-primary shadow" role="button" href="/Addresses/Create"
                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Add Address</a><br />
                    Add New Address
                </li>
            </ol>
        </section>
    </div>
    <div class="col-sm-4">
        <section class="text-center">
            <h4>Residents</h4>
            <ol class="list-group text-center">
                <li class="list-group-item">
                    <a class="btn btn-primary shadow" role="button" href="/Residents/Index"
                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Residents List</a><br />
                    View All Residents
                </li>
                <li class="list-group-item">
                    <a class="btn btn-primary shadow" role="button" href="/Groupings/Create"
                       style="background: #567b92;border-style: none;border-color: var(--bs-navbar-hover-color);">Add Resident</a><br />
                    Add New Resident
                </li>
            </ol>
        </section>
    </div>
</div>
